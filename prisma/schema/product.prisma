model Product {
  id          String    @id @default(cuid())
  name        String
  description String
  price       Float
  published   Boolean   @default(false)
  slug        String    @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])
}